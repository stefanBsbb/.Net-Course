@using webapp.Models
@using webapp.Helpers
@model List<UserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>UserID</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>UserName</th>


        </tr>
    </thead>


        @Html.ActionLink("Add New User", "Edit", "User", null, new { @class = "btn btn-primary btn-sm" })


        @foreach (UserViewModel user in Model)
        {
            <tr>
                <td class="cell-small">@user.UserID</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Username</td>
                <td class="cell-small">
                    @Html.ActionLink("Edit", "Edit", "User", new { id = user.UserID }, new { @class = "btn btn-primary btn-sm" })
                </td>
                <td class="cell-small">
                    @Html.ActionLink("Delete", "Delete", "User", new { id = user.UserID }, new { onclick = "return confirm('Are you sure you to delete this user?');", @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </table>

